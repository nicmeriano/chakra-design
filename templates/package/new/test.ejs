---
to: '<%= h.prependPackagePath(name, `__tests__/${h.pascalize(name)}.test.tsx`) %>'
---
<% component = h.pascalize(name) -%>
import { composeStories } from '@storybook/testing-react'
import { render, screen } from '@chakra-design/test-utils'

import * as stories from '../__stories__/<%= component %>.stories'

const { Default } = composeStories(stories)

test('renders <%= component %> component', () => {
  render(<Default />)

  const content = screen.getByText(/<%= component %> Component/i)

  expect(content).toBeInTheDocument()
})
