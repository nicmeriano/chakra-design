{
  "name": "chakra-design",
  "description": "A collection of Chakra UI's free Pro components as a starting point for a design system",
  "homepage": "https://github.com/tundera/chakra-library",
  "repository": {
    "type": "git",
    "url": "https://github.com/tundera/chakra-library"
  },
  "author": {
    "name": "Philip Johnston",
    "url": "https://github.com/tundera",
    "email": "tunderadev@gmail.com"
  },
  "workspaces": {
    "packages": [
      "examples/*",
      "packages/*",
      "internal/*",
      "website"
    ]
  },
  "scripts": {
    "postinstall": "husky install",
    "clean": "node -r tsm -r tsconfig-paths/register ./scripts/clean.ts",
    "reinstall": "node -r tsm -r tsconfig-paths/register ./scripts/clean.ts --reinstall",
    "build": "node -r tsm -r tsconfig-paths/register ./scripts/build.ts",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx .",
    "test": "NODE_ENV='test' jest --runInBand",
    "test:watch": "NODE_ENV='test' jest --runInBand --watch",
    "watch:internal": "ultra -r --silent --filter 'internal/*' watch",
    "watch:packages": "ultra -r --silent --filter 'packages/*' watch",
    "watch": "yarn watch:internal && yarn watch:packages",
    "typecheck:internal": "ultra -r --silent --filter 'internal/*' typecheck",
    "typecheck:packages": "ultra -r --silent --filter 'packages/*' typecheck",
    "typecheck": "yarn typecheck:internal && yarn typecheck:packages",
    "storybook": "start-storybook -p 6006",
    "commit": "gacp",
    "build-storybook": "build-storybook",
    "generate:package": "hygen package new"
  },
  "devDependencies": {
    "@chakra-ui/icons": "1.1.1",
    "@chakra-ui/react": "1.7.2",
    "@changesets/cli": "2.18.1",
    "@emotion/jest": "11.6.0",
    "@emotion/react": "11.7.0",
    "@emotion/styled": "11.6.0",
    "@hookform/resolvers": "2.8.4",
    "@storybook/addon-a11y": "6.4.8",
    "@storybook/addon-actions": "6.4.8",
    "@storybook/addon-docs": "6.4.8",
    "@storybook/addon-essentials": "6.4.8",
    "@storybook/addon-links": "6.4.8",
    "@storybook/addon-storysource": "6.4.8",
    "@storybook/react": "6.4.8",
    "@storybook/testing-library": "0.0.7",
    "@storybook/testing-react": "1.2.1",
    "@swc-node/jest": "1.4.1",
    "@swc/core": "1.2.118",
    "@swc/jest": "0.2.11",
    "@testing-library/react": "12.1.2",
    "@testing-library/react-hooks": "7.0.2",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.11",
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "@typescript-eslint/eslint-plugin": "5.6.0",
    "@typescript-eslint/parser": "5.6.0",
    "babel-loader": "8.2.3",
    "change-case": "4.1.2",
    "cloudinary-build-url": "0.2.1",
    "eslint": "8.4.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jest": "25.3.0",
    "eslint-plugin-jest-formatting": "3.1.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.27.1",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-storybook": "0.5.3",
    "eslint-plugin-testing-library": "5.0.1",
    "execa": "6.0.0",
    "framer-motion": "5.4.1",
    "gacp": "2.10.2",
    "husky": "7.0.4",
    "hygen": "6.1.0",
    "jest": "27.4.3",
    "jest-axe": "5.0.1",
    "lint-staged": "12.1.2",
    "prettier": "2.5.1",
    "pretty-quick": "3.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "7.21.0",
    "react-icons": "4.3.1",
    "react-test-renderer": "17.0.2",
    "rimraf": "3.0.2",
    "storybook-addon-performance": "0.16.1",
    "storybook-builder-vite": "0.1.10",
    "tasuku": "1.0.2",
    "ts-jest": "27.1.0",
    "ts-node": "10.4.0",
    "tsconfig-paths": "3.12.0",
    "tsm": "2.2.1",
    "typescript": "4.5.2",
    "ultra-runner": "3.10.5",
    "zod": "3.11.6"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "packageManager": "yarn@3.1.1",
  "peerDependencies": {
    "@chakra-ui/react": "*",
    "@emotion/jest": "*",
    "@testing-library/react": "*",
    "@testing-library/react-hooks": "*",
    "@testing-library/user-event": "*",
    "jest-axe": "*",
    "react-test-renderer": "*"
  },
  "publishConfig": {
    "access": "public"
  },
  "gacp": {
    "add": true,
    "push": true,
    "emoji": "emoji",
    "editor": false
  }
}
